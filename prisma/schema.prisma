generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  imageUrl  String
  variants  Json
  stock     Int      @default(0)
  category  Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
}
